{% extends 'base.html.twig' %}

{% block body %}
    <h1>Publicaciones list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Bajada</th>
                <th>Nombreautor</th>
                <th>Fechapublicacion</th>
                <th>Contenido</th>
                <th>Fechacaducidad</th>
                <th>Firmante</th>
                <th>Archivo</th>
                <th>Links</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicacion in publicaciones %}
            <tr>
                <td><a href="{{ path('publicacion_show', { 'id': publicacion.id }) }}">{{ publicacion.id }}</a></td>
                <td>{{ publicacion.titulo }}</td>
                <td>{{ publicacion.bajada }}</td>
                <td>{{ publicacion.nombreAutor }}</td>
                <td>{% if publicacion.fechaPublicacion %}{{ publicacion.fechaPublicacion|date('Y-m-d') }}{% endif %}</td>
                <td>{{ publicacion.contenido }}</td>
                <td>{% if publicacion.fechaCaducidad %}{{ publicacion.fechaCaducidad|date('Y-m-d') }}{% endif %}</td>
                <td>{{ publicacion.firmante }}</td>
                <td>{{ publicacion.archivo }}</td>
                <td>{{ publicacion.links }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('publicacion_show', { 'id': publicacion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('publicacion_edit', { 'id': publicacion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publicacion_new') }}">Create a new publicacion</a>
        </li>
    </ul>
{% endblock %}

 <!DOCTYPE html>
<html>
		<head>
				<meta charset="UTF-8"/>
				<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
				<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
				<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
				<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
				<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
				<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
				<title>{% block title %}Cartelera Virtual{% endblock %}</title>
		</head>
		<header class="d-flex justify-content-between align-items-center">
				<div class="d-flex align-items-center">
						<img class="logo-medicina" src="{{ asset('logo-med.png') }}">
						<a href="{{ path('homepage') }}">Facultad de Ciencias Médicas</a>
				</div>
				<img class="logo-unlp" src="{{ asset('logo-unlp.png') }}">
		</header>
		
		<nav class="navbar navbar-default">
			<div class="container-fluid">
							<ul class="nav">	 		 
								{% if is_granted("ROLE_ADMIN") %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('catedra_index') }}">
											Cátedras
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('usuario_index') }}">
											Usuarios
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('noticia_index') }}">
											Noticias
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('publicacion_visar') }}">
											Visado
										</a>
									</li>
									<li class="nav-link nombre-usuario	">
										{{ app.user.username }}
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('fos_user_security_logout') }}">
											Cerrar sesión
										</a>
									</li>
								{% elseif is_granted("ROLE_CATEDRA") %}
									<li class="nav-link nombre-usuario">
										{{ app.user.username }}
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('adm_catedra', {'id': app.user.catedra.id}) }}">
											{{ app.user.catedra }}
										</a> 
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('fos_user_security_logout') }}">
											Cerrar sesión
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
									</li>
								{% else %}
									<li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_login') }}">INICIAR SESIÓN</a></li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
									</li>
								{% endif %}
							</ul>
			</div>
		</nav>

		<body>
				{% block body %}{% endblock %}
				{% block javascripts %}{% endblock %}
		</body>
</html>

{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-end">
        <h1 class="nombre-catedra">{{ catedra.nombre }}
        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
            <a class="opcion" href="{{ path('catedra_edit', { 'id': catedra.id }) }}"><i class="fas fa-edit"></i>Editar</a>
        </h1>
        <div class="mr-5">
            <a class="btn" href="{{ path('publicacion_new', { 'id': catedra.id }) }}">Añadir publicación</a>
        </div>
        {% endif %}
    </div>

    <div class="container-fluid info-catedra">
        <div><i class="fas fa-envelope"></i>
            {{ catedra.emailContacto }}
        </div> 
        <i class="fas fa-phone"></i>
            {{ catedra.telefonoContacto }}
        <div><i class="fas fa-user-alt"></i>    
            {% if catedra.horarioAtencion %}{{ catedra.horarioAtencion }}{% endif %}
        </div>
    </div>
<!-- 
    <ul class="nav">
         <li class="nav item">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul> -->

    <div class="row publicaciones">
    {% for publicacion in publicaciones %}
            <div class="col-md-4">
                <div class="jumbotron">
                    {% if is_granted("ROLE_ADMIN") %}
                        <ul>
                            <li>
                                <a href="{{ path('publicacion_edit', { 'id': publicacion.id }) }}"><i class="fas fa-edit"></i></a>
                            </li>
                            <li>
                                <input id="publicacion_id" value="{{publicacion.id}}" hidden>
                                <button id="btn_delete" type="button" class="delete-btn btn btn-danger" data-toggle="modal" data-target="#delete_modal" >
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </li>
                        </ul>
                    {% endif %}
                    <div class="header-publicacion">
                        <p>
                        <i class="fas fa-paperclip"></i>
                        {{ publicacion.etiqueta }}
                        </p>
                        {{ publicacion.fechaPublicacion|date("d/m/Y") }}
                    </div>
                    <div>
                        <h6>{{ publicacion.titulo }}</h6>
                        <p>{{ publicacion.bajada }}</p>
                        {{ publicacion.contenido|raw }}
                        <a href="{{ asset('pdf/'~publicacion.archivo) }}">Ver pdf</a>
                        <div>
                            <p>Firma la publicación:</p>
                            {{ publicacion.firmante }}
                        </div>
                        
                    </div>
                </div>
            </div>
    {% endfor %}
    </div>

    <div class="modal" id='delete_modal' tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Eliminar Publicación</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>¿Estás seguro de que deseas eliminar esta publicación?</p>
            </div>
            <div class="modal-footer">
              <form class="form_delete" method="post">
                <button type="submit" class="btn btn-primary">Eliminar</button>
              </form>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
          </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

<script>

$('#btn_delete').click(function() {
  var id_pub = $("#publicacion_id").val();
  $('.form_delete').attr('action', '/publicacion/delete/'+id_pub);
});
</script>

{% endblock %}